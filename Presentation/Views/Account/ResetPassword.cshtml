@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div class="mb-3 position-relative">
        <label asp-for="NewPassword" class="form-label"></label>
        <div class="input-group">
            <input asp-for="NewPassword" class="form-control pe-5" type="password" id="resetNewPassword" />
            <button type="button" class="btn btn-outline-secondary position-absolute end-0 top-0 mt-1 me-2 border-0 bg-transparent" onclick="togglePassword('resetNewPassword', 'newPasswordIcon')" tabindex="-1">
                <i class="bi bi-eye" id="newPasswordIcon"></i>
            </button>
        </div>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3 position-relative">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <div class="input-group">
            <input asp-for="ConfirmPassword" class="form-control pe-5" type="password" id="resetConfirmPassword" />
            <button type="button" class="btn btn-outline-secondary position-absolute end-0 top-0 mt-1 me-2 border-0 bg-transparent" onclick="togglePassword('resetConfirmPassword', 'confirmPasswordIcon')" tabindex="-1">
                <i class="bi bi-eye" id="confirmPasswordIcon"></i>
            </button>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Reset Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            const type = input.getAttribute('type');

            if (type === 'password') {
                input.setAttribute('type', 'text');
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.setAttribute('type', 'password');
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
