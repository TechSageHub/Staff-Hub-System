@model Presentation.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Profile";
}

<div class="mb-4">
    <a asp-action="Index" class="text-decoration-none text-muted">
        <i class="bi bi-arrow-left me-1"></i> Back to Directory
    </a>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm text-center p-4 mb-4">
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Profile" class="rounded-circle shadow-sm border border-4 border-white" style="width: 150px; height: 150px; object-fit: cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto text-primary fw-bold shadow-sm" style="width: 150px; height: 150px; font-size: 3rem;">
                        @Model.FirstName[0]@Model.LastName[0]
                    </div>
                }
            </div>
            <h3 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h3>
            <p class="text-muted mb-3">@Model.DepartmentName</p>
            
            <div class="d-grid gap-2 d-md-block">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 rounded-pill">
                    <i class="bi bi-pencil me-2"></i>Edit
                </a>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <form asp-action="DeleteImage" asp-route-employeeId="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger px-4 rounded-pill">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm p-4">
            <h5 class="fw-bold mb-3">Contact Information</h5>
            <div class="d-flex align-items-center mb-3">
                <div class="bg-light p-2 rounded-circle text-primary me-3">
                    <i class="bi bi-envelope"></i>
                </div>
                <div>
                    <div class="small text-muted">Email</div>
                    <div class="fw-medium">@Model.Email</div>
                </div>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="bg-light p-2 rounded-circle text-primary me-3">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div>
                    <div class="small text-muted">Hire Date</div>
                    <div class="fw-medium">@Model.HireDate.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <div class="bg-light p-2 rounded-circle text-primary me-3">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <div>
                    <div class="small text-muted">Annual Salary</div>
                    <div class="fw-medium">@Model.Salary.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Address Details</h5>
                @if (Model.Address == null)
                {
                    <a asp-controller="Address" asp-action="Add" asp-route-employeeId="@Model.Id" class="btn btn-sm btn-outline-success rounded-pill px-3">
                        <i class="bi bi-plus-lg me-1"></i>Add Address
                    </a>
                }
                else
                {
                    <div>
                        <a asp-controller="Address" asp-action="Update" asp-route-employeeId="@Model.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                            Update
                        </a>
                        <form asp-controller="Address" asp-action="Delete" asp-route-employeeId="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3" onclick="return confirm('Delete address?')">Delete</button>
                        </form>
                    </div>
                }
            </div>

            @if (Model.Address != null)
            {
                <div class="row g-4">
                    <div class="col-sm-6">
                        <div class="p-3 bg-light rounded-3">
                            <div class="small text-muted mb-1">Street</div>
                            <div class="fw-bold">@Model.Address.Street</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="p-3 bg-light rounded-3">
                            <div class="small text-muted mb-1">City</div>
                            <div class="fw-bold">@Model.Address.City</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="p-3 bg-light rounded-3">
                            <div class="small text-muted mb-1">State</div>
                            <div class="fw-bold">@Model.Address.State</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="p-3 bg-light rounded-3">
                            <div class="small text-muted mb-1">Country</div>
                            <div class="fw-bold">@Model.Address.Country</div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3">
                    <i class="bi bi-geo-alt text-muted fs-1"></i>
                    <p class="mt-3">No address records found for this employee.</p>
                </div>
            }
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="col-lg-8 mt-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-folder-fill me-2"></i>Document Vault</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Document" asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-4 p-4 bg-light rounded-3">
                        <input type="hidden" name="EmployeeId" value="@Model.Id" />
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Document Type</label>
                                <select name="DocumentType" class="form-select" required>
                                    <option value="">Select Type</option>
                                    <option value="ID Card">ID Card</option>
                                    <option value="Passport">Passport</option>
                                    <option value="Contract">Employment Contract</option>
                                    <option value="Certificate">Certificate</option>
                                    <option value="Resume">Resume/CV</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold small">Expiry Date (Optional)</label>
                                <input type="date" name="ExpiryDate" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <label class="form-label fw-bold small">Upload File</label>
                                <input type="file" name="File" class="form-control" required accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary rounded-pill px-4">
                                    <i class="bi bi-cloud-upload me-2"></i>Upload Document
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="alert alert-info border-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Document Vault:</strong> Securely store employee documents like IDs, contracts, and certificates. Files are encrypted and stored in the cloud.
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<form id="antiforgeryForm">
    @Html.AntiForgeryToken()
</form>