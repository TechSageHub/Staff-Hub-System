@model List<Application.Dtos.AttendanceLogDto>

@{
    ViewData["Title"] = "Attendance Overview";
    var employees = ViewBag.Employees as List<Application.Dtos.EmployeeDto> ?? new List<Application.Dtos.EmployeeDto>();
    DateTime? from = ViewBag.From as DateTime?;
    DateTime? to = ViewBag.To as DateTime?;
    Guid? employeeId = ViewBag.EmployeeId as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
        <p class="text-muted">Review attendance by employee or date range</p>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Admin" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-medium">From</label>
                <input type="date" name="from" class="form-control" value="@(from?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-medium">To</label>
                <input type="date" name="to" class="form-control" value="@(to?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-medium">Employee</label>
                <select name="employeeId" class="form-select">
                    <option value="">All Employees</option>
                    @foreach (var emp in employees)
                    {
                        <option value="@emp.Id" selected="@(employeeId.HasValue && employeeId.Value == emp.Id ? "selected" : "")">
                            @emp.FirstName @emp.LastName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-clock text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 fs-5">No attendance records found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Employee</th>
                            <th>Clock In</th>
                            <th>Clock Out</th>
                            <th>Total Hours</th>
                            <th class="text-end pe-4">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td class="ps-4">@log.EmployeeName</td>
                                <td>@log.ClockInTime.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@(log.ClockOutTime.HasValue ? log.ClockOutTime.Value.ToString("MMM dd, yyyy HH:mm") : "-")</td>
                                <td>@(string.IsNullOrWhiteSpace(log.TotalHours) ? "-" : log.TotalHours)</td>
                                <td class="text-end pe-4 text-muted small">@(!string.IsNullOrWhiteSpace(log.Notes) ? log.Notes : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
