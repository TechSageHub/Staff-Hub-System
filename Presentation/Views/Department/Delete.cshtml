@model Presentation.Models.DepartmentViewModel
@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2> 

<div class="alert alert-danger"> 
    <strong>Are you sure you want to delete this department?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-controller="Department" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
