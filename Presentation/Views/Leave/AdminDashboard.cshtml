@model List<Application.Dtos.LeaveRequestDto>
@{
    ViewData["Title"] = "Leave Requests";
    var selectedStatus = (ViewBag.SelectedStatus as string ?? "all").ToLowerInvariant();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold mb-0">Leave Requests</h2>
            <p class="text-muted">View leave requests and filter by status.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="btn-group" role="group" aria-label="Leave status filter">
                <a class="btn btn-sm @(selectedStatus == "all" ? "btn-primary" : "btn-outline-primary")" asp-action="AdminDashboard" asp-route-status="all">All</a>
                <a class="btn btn-sm @(selectedStatus == "pending" ? "btn-primary" : "btn-outline-primary")" asp-action="AdminDashboard" asp-route-status="pending">Pending</a>
                <a class="btn btn-sm @(selectedStatus == "approved" ? "btn-primary" : "btn-outline-primary")" asp-action="AdminDashboard" asp-route-status="approved">Approved</a>
                <a class="btn btn-sm @(selectedStatus == "rejected" ? "btn-primary" : "btn-outline-primary")" asp-action="AdminDashboard" asp-route-status="rejected">Rejected</a>
                <a class="btn btn-sm @(selectedStatus == "cancelled" ? "btn-primary" : "btn-outline-primary")" asp-action="AdminDashboard" asp-route-status="cancelled">Cancelled</a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm rounded-4 p-5 text-center">
            <div class="bg-light text-muted d-inline-block p-4 rounded-circle mb-3 mx-auto">
                <i class="bi bi-inbox fs-1"></i>
            </div>
            <h4 class="fw-bold">No results</h4>
            <p class="text-muted mb-0">There are no leave requests for the selected filter.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var leave in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3">
                                    @leave.EmployeeName[0]
                                </div>
                                <div class="overflow-hidden">
                                    <h6 class="fw-bold mb-0 text-truncate">@leave.EmployeeName</h6>
                                    <span class="badge bg-light text-dark border small fw-normal">@leave.LeaveType</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-between mb-3">
                                @switch (leave.Status)
                                {
                                    case "Approved":
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Approved</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Rejected</span>
                                        break;
                                    case "Pending":
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Pending</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3">@leave.Status</span>
                                        break;
                                }
                                <span class="text-muted small">@leave.DateRequested.ToString("MMM dd, yyyy")</span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="small text-muted text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">Period</div>
                                <div class="fw-medium">@leave.StartDate.ToString("MMM dd") - @leave.EndDate.ToString("MMM dd, yyyy")</div>
                                <div class="small text-muted">@leave.DurationInDays Days Requested</div>
                            </div>

                            @if (!string.IsNullOrEmpty(leave.Reason))
                            {
                                <div class="mb-4">
                                    <div class="small text-muted text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">Staff Reason</div>
                                    <div class="bg-light p-2 rounded small">"@leave.Reason"</div>
                                </div>
                            }

                            @if (leave.Status == "Pending")
                            {
                                <form asp-action="Process" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="LeaveId" value="@leave.Id" />
                                    <div class="mb-3">
                                        <input type="text" name="AdminComment" class="form-control form-control-sm" placeholder="Add optional comment..." />
                                    </div>
                                    <div class="d-flex flex-wrap gap-2">
                                        <button type="submit" name="Status" value="Approved" class="btn btn-success flex-grow-1 rounded-pill">Approve</button>
                                        <button type="submit" name="Status" value="Rejected" class="btn btn-outline-danger flex-grow-1 rounded-pill">Reject</button>
                                        <button type="submit" name="Status" value="Cancelled" class="btn btn-outline-secondary flex-grow-1 rounded-pill">Cancel</button>
                                    </div>
                                </form>
                            }

                            @if (!string.IsNullOrWhiteSpace(leave.AdminComment))
                            {
                                <div class="mt-3">
                                    <div class="small text-muted text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">Admin Comment</div>
                                    <div class="bg-light p-2 rounded small">@leave.AdminComment</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
